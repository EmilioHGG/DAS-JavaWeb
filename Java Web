*********editarcita.jsp….
<%@page contentType="text/html" pageEncoding="UTF-8"%>
<%@page import="java.sql.*"%>
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>Editar Cita</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="apple-touch-icon" href="apple-touch-icon.png">
        <link rel="stylesheet" href="webjars/bootstrap/5.2.2/css/bootstrap.css">
    </head>
    <body>
        <div class="container text-center">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <br>
                    <h3>Editar cita</h3>
                    <form class="form" action="./Citas" method="POST">
                        <div class="form-group" style="text-align:left;">
                            <label  for="idcita" class="form-label">ID</label>
                            <input class="form-control" value="<%= request.getParameter("idcita")%>"  name="idcita" readonly="readonly" type="text" placeholder="Ingrese ID"/>
                        </div>
                        <br>
                        <div class="form-group" style="text-align:left;">
                            <label for="idespecialidad" class="form-label ">Especialidad</label>
                            <select class="form-select" name="idespecialidad"> 
                                <option value="-1">Selecciona una especialidad</option>
                                <%
                                    try {
                                        String Query = "SELECT * FROM tbespecialidad";
                                        Class.forName("com.mysql.jdbc.Driver").newInstance();
                                        Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3308/bd_das", "root", "");
                                        Statement stm = conn.createStatement();
                                        ResultSet rs = stm.executeQuery(Query);
                                        while (rs.next()) {
                                %>
                                <option value="<%=rs.getInt("ID")%>" <% if (rs.getString("ID").equals((request.getParameter("idespecialidad")))) {
                                        out.println("SELECTED");
                                    }%> > <%=rs.getString("Nombre")%></option>

                                <%
                                        }
                                    } catch (Exception ex) {
                                        ex.printStackTrace();
                                        out.println("Error: " + ex.getMessage());
                                    }
                                %>  
                            </select> 
                        </div>
                        <br>
                        <div class="form-group" style="text-align:left;">
                            <label for="iddoctor" class="form-label ">Doctor</label>
                            <select class="form-select" name="iddoctor"> 
                                <option value="-1">Selecciona una Doctor</option>
                                <%
                                    try {
                                        String Query = "SELECT * FROM tbdoctor";
                                        Class.forName("com.mysql.jdbc.Driver").newInstance();
                                        Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3308/bd_das", "root", "");
                                        Statement stm = conn.createStatement();
                                        ResultSet rs = stm.executeQuery(Query);
                                        while (rs.next()) {
                                %>
                                <option value="<%=rs.getInt("IdDoctor")%>" <% if (rs.getString("IdDoctor").equals((request.getParameter("iddoctor")))) {
                                        out.println("SELECTED");
                                    }%> > <%=rs.getString("Nombre")%></option>

                                <%
                                        }
                                    } catch (Exception ex) {
                                        ex.printStackTrace();
                                        out.println("Error: " + ex.getMessage());
                                    }
                                %>  
                            </select> 
                        </div>
                        <br>
                        <div class="form-group" style="text-align:left;">
                            <label  for="idhorario" class="form-label">Turno</label>
                            <select class="form-control" readonly="readonly" name="idhorario"> 
                                <option value="-1">Selecciona un turno</option>
                                <%
                                    try {
                                        String Query = "SELECT * FROM tbturno";
                                        Class.forName("com.mysql.jdbc.Driver").newInstance();
                                        Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3308/bd_das", "root", "");
                                        Statement stm = conn.createStatement();
                                        ResultSet rs = stm.executeQuery(Query);
                                        while (rs.next()) {
                                %>
                                <option value="<%=rs.getInt("ID")%>" <% if (rs.getString("ID").equals((request.getParameter("idhorario")))) {
                                        out.println("SELECTED");
                                    }%> ><%=rs.getString("Nombre")%></option>

                                <%
                                        }
                                    } catch (Exception ex) {
                                        ex.printStackTrace();
                                        out.println("Error: " + ex.getMessage());
                                    }
                                %>  
                            </select> 
                        </div>
                        <br>
                        <div class="form-group" style="text-align:left;">
                            <label for="fecha" class="form-label">Fecha</label>
                            <input class="form-control" value="<%= request.getParameter("fecha")%>" name="fecha" type="text" placeholder="Seleccione una fecha"/>
                        </div>
                        <br>
                        <div class="form-group" style="text-align:left;">
                            <label for="idpaciente" class="form-label ">Paciente</label>
                            <select class="form-select" name="idpaciente"> 
                                <option value="-1">Selecciona un paciente</option>
                                <%
                                    try {
                                        String Query = "SELECT * FROM tbpaciente";
                                        Class.forName("com.mysql.jdbc.Driver").newInstance();
                                        Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3308/bd_das", "root", "");
                                        Statement stm = conn.createStatement();
                                        ResultSet rs = stm.executeQuery(Query);
                                        while (rs.next()) {
                                %>
                                <option value="<%=rs.getInt("ID")%>" <% if (rs.getString("ID").equals((request.getParameter("idpaciente")))) {
                                        out.println("SELECTED");
                                    }%> > <%=rs.getString("Nombre")%></option>

                                <%
                                        }
                                    } catch (Exception ex) {
                                        ex.printStackTrace();
                                        out.println("Error: " + ex.getMessage());
                                    }
                                %>  
                            </select> 
                        </div>
                        <br>
                        <div class="form-group" style="text-align:left;">
                            <label for="correo" class="form-label">Correo</label>
                            <input class="form-control" value="<%= request.getParameter("correo")%>" name="correo" type="email" placeholder="Ingrese su correo"/>
                        </div>

                        <br>
                        <div class="form-group" style="text-align:left;">
                            <label for="dni" class="form-label">DNI</label>
                            <input class="form-control" value="<%= request.getParameter("dni")%>" name="dni" type="text" placeholder="Ingrese su DNI"/>
                        </div>
                        <br>
                        <div class="form-group" style="text-align:left;">
                            <label for="celular" class="form-label">Celular</label>
                            <input class="form-control" value="<%= request.getParameter("celular")%>" name="celular" type="text" placeholder="Ingrese su celular"/>
                        </div>
                        <br>
                        <input type="hidden" value="E" name="accion" />
                        <br>
                       <div class="d-grid gap-2" style="width: 100%;">          
                            <button type="submit" class="btn btn-primary btn-lg">Actualizar</button>
