import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet(name = "Login", urlPatterns = {"/Login"})
public class LoginServlet extends HttpServlet {

    @Override
    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        String sHtml = "";
        VHtml objVHtml = new VHtml();
                sHtml = objVHtml.getHeader() + objVHtml.getBody()
                        + "<h3 style=\"text-align: center; margin-bottom: 30px;\">Bienvenido(a) al sistema DOCLINECITAS</h3>"
                        + "<div style=\"display: flex; justify-content: center;\">"
                        + "<div style=\"text-align: center; margin-right: 20px;\">"
                        + "<a href=\"./Paciente\" style=\"display: inline-block; padding: 10px; background-color: #d2f1dc; border-radius: 10px; text-decoration: none; color: black; margin-top: 15px;\">"
                        + "<img class=\"img-responsive center-block\" src=\"img/paci.png\" style=\"width: 100px; height: 100px; margin-bottom: 15px;\" /><br>"
                        + "Paciente</a>"
                        + "</div>"
                        + "<div style=\"text-align: center; margin-left: 20px;; margin-right: 20px;\">"
                        + "<a href=\"./Doctor\" style=\"display: inline-block; padding: 10px; background-color: #d2e7f1; border-radius: 10px; text-decoration: none; color: black; margin-top: 15px;\">"
                        + "<img class=\"img-responsive center-block\" src=\"img/docto.png\" style=\"width: 100px; height: 100px; margin-bottom: 15px;\" /><br>"
                        + "Doctores</a>"
                        + "</div>"
                        + "<div style=\"text-align: center; margin-left: 20px;; margin-right: 20px;\">"
