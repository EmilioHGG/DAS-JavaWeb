                            <input required class="form-control" name="telefono" type="text" placeholder="Ingrese Teléfono" style="width: 80%" 
                                   pattern="[0-9]{0,9}" maxlength="9" oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 9)" />
                        </div>
                        <br>

                        <div class="form-group">
                            <label for="correo" class="form-label">Correo</label>
