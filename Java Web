package com.uwiener.das.javaweb;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class BDConexion {
protected static Connection initializeDatabases() 
        throws SQLException, ClassNotFoundException
{
    String bdDriver ="com.mysql.jdbc.Driver";
    String bdURL="jdbc:mysql://localhost:3308/";
    String bdUser="root";
    String bdPass="";
    String bdDataBase="bd_das";
    Class.forName(bdDriver);
    Connection cnx = DriverManager.getConnection(bdURL + bdDataBase, bdUser, bdPass);
    return cnx;
}
    
}


*****************CitasServelet.java***************
**************************************************
package com.uwiener.das.javaweb;

import static com.uwiener.das.javaweb.BDConexion.initializeDatabases;
import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet(name = "Citas", urlPatterns = {"/Citas"})
public class CitasServlet extends HttpServlet {

    @Override
    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        Connection cnx;
        String sHtml = "";
        VHtml objVHtml = new VHtml();
        String sTabla = "";
        try {
            cnx = initializeDatabases();
            PreparedStatement st = cnx.prepareStatement("SELECT IDCita, tbdoctor.Nombre AS Doctor, tbespecialidad.Nombre AS Especialidad, tbhorario.Nombre AS Horario, tbpaciente.Nombre as Paciente, dni, tbcita.correo, celular, DATE_FORMAT(Fecha, '%Y-%m-%d') AS Fecha,tbdoctor.IdDoctor AS idDoctor,tbespecialidad.ID AS idEspecialidad, tbpaciente.ID AS idPaciente,tbhorario.IDHorario AS idHorario FROM tbcita "
                    + "INNER JOIN tbhorario ON tbhorario.idHorario = tbcita.IdHorario "
                    + "INNER JOIN tbdoctor ON tbdoctor.IdDoctor = tbcita.IdDoctor "
                    + "INNER JOIN tbespecialidad ON tbespecialidad.ID = tbcita.IdEspecialidad "
                    + "INNER JOIN tbpaciente ON tbpaciente.ID = tbcita.IdPaciente ");
            ResultSet rs = st.executeQuery();
            sHtml = objVHtml.getHeader() + objVHtml.getBody()
                    + "<h3 class=\"text-primary text-center\" style=\"color: black;\">Listado de citas</h3> <br>"
                    + "                    <a href=\"nuevacita.jsp\"><button class=\"btn btn-success glyphicon glyphicon-new-window\">\n"
                    + "                            Nueva cita</button></a>\n"
                    + "<table class=\"table table-striped\" style=\"width: 200%; margin: 0 auto;\">\n"
                    + "    <colgroup>\n"
                    + "        <col style=\"width: 4.5%;\">\n"
                    + "        <col style=\"width: 14.5%;\">\n"
                    + "        <col style=\"width: 14.5%;\">\n"
                    + "        <col style=\"width: 14.5%;\">\n"
                    + "        <col style=\"width: 14.5%;\">\n"
                    + "        <col style=\"width: 8.5%;\">\n"
                    + "        <col style=\"width: 10.5%;\">\n"
                    + "        <col style=\"width: 10.5%;\">\n"
                    + "    </colgroup>\n"
                    + "                        <tr>\n"
                    + "                            <th>Nº</th>\n"
                    + "                            <th>Doctor</th>\n"
                    + "                            <th>Especialidad</th>\n"
                    + "                            <th>Horario</th>\n"
                    + "                            <th>Paciente</th>\n"
                    + "                            <th>Fecha</th>\n"
                    + "                            <th>Detalle</th>\n"
                    + "                            <th>Borrar</th>\n"
                    + "                        </tr>\n";
            while (rs.next()) {
                sTabla += "<tr>\n"
                        + "   <td>" + rs.getInt(1) + "</td>\n"
                        + "   <td>" + rs.getString(2) + "</td>\n"
                        + "   <td>" + rs.getString(3) + "</td>\n"
                        + "   <td>" + rs.getString(4) + "</td>\n"
                        + "   <td>" + rs.getString(5) + "</td>\n"
                        + "   <td>" + rs.getString(9) + "</td>\n"
                        + "   <td><a href=\"./editarcita.jsp?idcita=" + rs.getInt(1) + "&doctor=" + rs.getString(2) + "&especialidad=" + rs.getString(3) + "&horario=" + rs.getString(4) + "&paciente=" + rs.getString(5) + "&dni=" + rs.getString(6) + "&correo=" + rs.getString(7) + "&celular=" + rs.getString(8) + "&fecha=" + rs.getString(9) + "&iddoctor=" + rs.getString(10) + "&idespecialidad=" + rs.getString(11) + "&idpaciente=" + rs.getString(12) + "&idhorario=" + rs.getString(13) + "\"><button class=\"btn btn-warning\"> Editar</button></a></td>\n"
                        + "   <td><a href=\"./borrarcita.jsp?idcita=" + rs.getInt(1) + "&doctor=" + rs.getString(2) + "&especialidad=" + rs.getString(3) + "&horario=" + rs.getString(4) + "&paciente=" + rs.getString(5) + "&dni=" + rs.getString(6) + "&correo=" + rs.getString(7) + "&celular=" + rs.getString(8) + "&fecha=" + rs.getString(9) + "&iddoctor=" + rs.getString(10) + "&idespecialidad=" + rs.getString(11) + "&idpaciente=" + rs.getString(12) + "&idhorario=" + rs.getString(13) + "\"><button class=\"btn btn-danger\"> Borrar</button></a></td>\n"
                        + "</tr>\n";
            }
            sHtml += sTabla + "</table>"
                    + "<br>"
                    + "<br>"
                    + "<div class=\"\">"
                    + "    <a href=\"./Login\" class=\"btn btn-secondary btn-lg\">Volver al Menú</a>"
                    + "</div>"
                    + objVHtml.getFooter();
            response.setContentType("text/html;charset=UTF-8");
            PrintWriter out = response.getWriter();
            out.println(sHtml);
        } catch (SQLException | ClassNotFoundException ex) {
            ex.toString();
        }
    }

    @Override
    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        Connection cnx;
        try {
            cnx = initializeDatabases();
            PreparedStatement st = null;
            switch (request.getParameter("accion")) {
                case "I":
                    st = cnx.prepareStatement("INSERT INTO tbcita (IdEspecialidad, IdDoctor, IdHorario, IdPaciente, correo, dni, celular, Fecha) VALUES (?,?,?,?,?,?,?,?)");
                    st.setString(1, request.getParameter("idespecialidad").toString());
                    st.setString(2, request.getParameter("iddoctor").toString());
                    st.setString(3, request.getParameter("idhorario").toString());
                    st.setString(4, request.getParameter("idpaciente").toString());
                    st.setString(5, request.getParameter("correo").toString());
                    st.setString(6, request.getParameter("dni").toString());
                    st.setString(7, request.getParameter("celular").toString());
                    st.setString(8, request.getParameter("fecha").toString());
                    st.executeUpdate();
                    response.sendRedirect("./Citas");
                    break;
                case "E":
                    st = cnx.prepareStatement("update tbcita set IdEspecialidad=?,IdDoctor=?,IdHorario=?,IdPaciente=?,correo=?,dni=?,celular=?,Fecha=? where IDCita=?");
                    st.setString(1, request.getParameter("idespecialidad").toString());
                    st.setString(2, request.getParameter("iddoctor").toString());
                    st.setString(3, request.getParameter("idhorario").toString());
                    st.setString(4, request.getParameter("idpaciente").toString());
                    st.setString(5, request.getParameter("correo").toString());
                    st.setString(6, request.getParameter("dni").toString());
                    st.setString(7, request.getParameter("celular").toString());
                    st.setString(8, request.getParameter("fecha").toString());
                    st.setString(9, request.getParameter("idcita").toString());

                    st.executeUpdate();
                    response.sendRedirect("./Citas");
                    break;
                case "B":
                    st = cnx.prepareStatement("delete from tbcita where IdCita=?");
                    st.setString(1, request.getParameter("idcita"));
                    st.executeUpdate();
                    response.sendRedirect("./Citas");
                    break;
                default:
                    break;
            }

        } catch (SQLException | ClassNotFoundException ex) {
            response.setContentType("text/html;charset=UTF-8");
            PrintWriter out = response.getWriter();
            out.println(ex.toString() + " - " + request.getParameter("nombre")
                    + " - " + request.getParameter("idespecialidad")
                    + " - " + request.getParameter("idhorario") + " - "
                    + request.getParameter("telefono") + " - "
                    + request.getParameter("iddoctor"));
        }
    }

    @Override
    public String getServletInfo() {
        return "Short description";
    }// </editor-fold>

}
*************DoctorServlet.java***********
******************************************

package com.uwiener.das.javaweb;

import static com.uwiener.das.javaweb.BDConexion.initializeDatabases;
import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet(name = "Doctor", urlPatterns = {"/Doctor"})
public class DoctorServlet extends HttpServlet {

    @Override
    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        Connection cnx;
        String sHtml = "";
        VHtml objVHtml = new VHtml();
        String sTabla = "";
        try {
            cnx = initializeDatabases();
            PreparedStatement st = cnx.prepareStatement("SELECT tbdoctor.IdDoctor,tbdoctor.Nombre,"
                    + "tbdoctor.IdEspecialidad,tbdoctor.idHorario,tbdoctor.Telefono, "
                    + "tbespecialidad.Nombre ENombres, tbhorario.Nombre HNombre  "
                    + "FROM tbdoctor "
                    + "inner join tbhorario on tbdoctor.idHorario=tbhorario.IDHorario "
                    + "inner join tbespecialidad on tbdoctor.IdEspecialidad=tbespecialidad.ID");
            ResultSet rs = st.executeQuery();
            sHtml = objVHtml.getHeader() + objVHtml.getBody()
                    + "<h3 class=\"text-primary text-center\">Lista de Doctores</h3> <br>"
                    + "<a href=\"nuevodoctor.jsp\"><button class=\"btn btn-success glyphicon glyphicon-new-window\">\n"
                    + "Nuevo doctor</button></a>\n"
                    + "<table class=\"table table-striped\" style=\"width: 220%; margin: 0 auto;\">\n"
                    + "    <colgroup>\n"
                    + "        <col style=\"width: 4.5%;\">\n"
                    + "        <col style=\"width: 14.5%;\">\n"
                    + "        <col style=\"width: 14.5%;\">\n"
                    + "        <col style=\"width: 14.5%;\">\n"
                    + "        <col style=\"width: 14.5%;\">\n"
                    + "        <col style=\"width: 8.5%;\">\n"
                    + "        <col style=\"width: 10.5%;\">\n"
                    + "        <col style=\"width: 10.5%;\">\n"
                    + "    </colgroup>\n"
                    + "<tr>\n"
                    + "<th>Nº</th>\n"
                    + "<th>Nombre</th>\n"
                    + "<th>Especialidad</th>\n"
                    + "<th>Horario</th>\n"
                    + "<th>Telefono</th>\n"
                    + "<th>Editar</th>\n"
                    + "<th>Borrar</th>\n"
                    + "</tr>\n";
            while (rs.next()) {
                sTabla += "<tr>\n"
                        + "   <td>" + rs.getInt(1) + "</td>\n"
                        + "   <td>" + rs.getString(2) + "</td>\n"
                        + "   <td>" + rs.getString(6) + "</td>\n"
                        + "   <td>" + rs.getString(7) + "</td>\n"
                        + "   <td>" + rs.getString(5) + "</td>\n"
                        + "   <td><a href=\"./borrardoctor.jsp?iddoctor=" + rs.getInt(1) + "&nombre=" + rs.getString(2) + "&idespecialidad=" + rs.getInt(3) + "&idhorario=" + rs.getInt(4) + "&telefono=" + rs.getString(5) + "\"><button class=\"btn btn-warning\"> Editar</button></a></td>\n"
                        + "   <td><a href=\"./editardoctor.jsp?iddoctor=" + rs.getInt(1) + "&nombre=" + rs.getString(2) + "&idespecialidad=" + rs.getInt(3) + "&idhorario=" + rs.getInt(4) + "&telefono=" + rs.getString(5) + "\"><button class=\"btn btn-danger\"> Borrar</button></a></td>\n"
                        + "</tr>\n";
            }
            sHtml += sTabla + "</table>"
                            + "<br>"
                            + "<br>"
                    + "<div class=\"\">"
                    + "    <a href=\"./Login\" class=\"btn btn-secondary btn-lg\">Volver al Menú</a>"
                    + "</div>"
                    + objVHtml.getFooter();
            response.setContentType("text/html;charset=UTF-8");
            PrintWriter out = response.getWriter();
            out.println(sHtml);
        } catch (SQLException | ClassNotFoundException ex) {
            ex.toString();
        }
    }

    @Override
    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        Connection cnx;
        try {
            cnx = initializeDatabases();
            PreparedStatement st = null;
            if (request.getParameter("accion").equals("I")) {
                st = cnx.prepareStatement("insert into tbdoctor (IdDoctor,Nombre,IdEspecialidad,IDHorario, Telefono) values(?,?,?,?,?)");
                st.setString(1, request.getParameter("iddoctor").toString());
                st.setString(2, request.getParameter("nombre").toString());
                st.setString(3, request.getParameter("idespecialidad").toString());
                st.setString(4, request.getParameter("idhorario").toString());
                st.setString(5, request.getParameter("telefono").toString());
                st.executeUpdate();
                response.sendRedirect("./Doctor");
            } else if (request.getParameter("accion").equals("E")) {
                st = cnx.prepareStatement("update tbdoctor set Nombre=?,IdEspecialidad=?,IdHorario=?,Telefono=? where IdDoctor=?");
                st.setString(1, request.getParameter("nombre").toString());
                st.setString(2, request.getParameter("idespecialidad").toString());
                st.setString(3, request.getParameter("idhorario").toString());
                st.setString(4, request.getParameter("telefono").toString());
                st.setString(5, request.getParameter("iddoctor"));
                st.executeUpdate();
                response.sendRedirect("./Doctor");
            } else if (request.getParameter("accion").equals("B")) {
                st = cnx.prepareStatement("delete from tbdoctor where IdDoctor=?");
                st.setString(1, request.getParameter("iddoctor"));
                st.executeUpdate();
                response.sendRedirect("./Doctor");
            }

        } catch (SQLException | ClassNotFoundException ex) {
            response.setContentType("text/html;charset=UTF-8");
            PrintWriter out = response.getWriter();
            out.println(ex.toString() + " - " + request.getParameter("nombre")
                    + " - " + request.getParameter("idespecialidad")
                    + " - " + request.getParameter("idhorario") + " - "
                    + request.getParameter("telefono") + " - "
                    + request.getParameter("iddoctor"));
        }
    }

    @Override
    public String getServletInfo() {
        return "Short description";
    }// </editor-fold>

}

************* EspecialidadServlet.java******************
********************************************************

package com.uwiener.das.javaweb;

import static com.uwiener.das.javaweb.BDConexion.initializeDatabases;
import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet(name = "Doctor", urlPatterns = {"/Doctor"})
public class DoctorServlet extends HttpServlet {

    @Override
    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        Connection cnx;
        String sHtml = "";
        VHtml objVHtml = new VHtml();
        String sTabla = "";
        try {
            cnx = initializeDatabases();
            PreparedStatement st = cnx.prepareStatement("SELECT tbdoctor.IdDoctor,tbdoctor.Nombre,"
                    + "tbdoctor.IdEspecialidad,tbdoctor.idHorario,tbdoctor.Telefono, "
                    + "tbespecialidad.Nombre ENombres, tbhorario.Nombre HNombre  "
                    + "FROM tbdoctor "
                    + "inner join tbhorario on tbdoctor.idHorario=tbhorario.IDHorario "
                    + "inner join tbespecialidad on tbdoctor.IdEspecialidad=tbespecialidad.ID");
            ResultSet rs = st.executeQuery();
            sHtml = objVHtml.getHeader() + objVHtml.getBody()
                    + "<h3 class=\"text-primary text-center\">Lista de Doctores</h3> <br>"
                    + "<a href=\"nuevodoctor.jsp\"><button class=\"btn btn-success glyphicon glyphicon-new-window\">\n"
                    + "Nuevo doctor</button></a>\n"
                    + "<table class=\"table table-striped\" style=\"width: 220%; margin: 0 auto;\">\n"
                    + "    <colgroup>\n"
                    + "        <col style=\"width: 4.5%;\">\n"
                    + "        <col style=\"width: 14.5%;\">\n"
                    + "        <col style=\"width: 14.5%;\">\n"
                    + "        <col style=\"width: 14.5%;\">\n"
                    + "        <col style=\"width: 14.5%;\">\n"
                    + "        <col style=\"width: 8.5%;\">\n"
                    + "        <col style=\"width: 10.5%;\">\n"
                    + "        <col style=\"width: 10.5%;\">\n"
                    + "    </colgroup>\n"
                    + "<tr>\n"
                    + "<th>Nº</th>\n"
                    + "<th>Nombre</th>\n"
                    + "<th>Especialidad</th>\n"
                    + "<th>Horario</th>\n"
                    + "<th>Telefono</th>\n"
                    + "<th>Editar</th>\n"
                    + "<th>Borrar</th>\n"
                    + "</tr>\n";
            while (rs.next()) {
                sTabla += "<tr>\n"
                        + "   <td>" + rs.getInt(1) + "</td>\n"
                        + "   <td>" + rs.getString(2) + "</td>\n"
                        + "   <td>" + rs.getString(6) + "</td>\n"
                        + "   <td>" + rs.getString(7) + "</td>\n"
                        + "   <td>" + rs.getString(5) + "</td>\n"
                        + "   <td><a href=\"./borrardoctor.jsp?iddoctor=" + rs.getInt(1) + "&nombre=" + rs.getString(2) + "&idespecialidad=" + rs.getInt(3) + "&idhorario=" + rs.getInt(4) + "&telefono=" + rs.getString(5) + "\"><button class=\"btn btn-warning\"> Editar</button></a></td>\n"
                        + "   <td><a href=\"./editardoctor.jsp?iddoctor=" + rs.getInt(1) + "&nombre=" + rs.getString(2) + "&idespecialidad=" + rs.getInt(3) + "&idhorario=" + rs.getInt(4) + "&telefono=" + rs.getString(5) + "\"><button class=\"btn btn-danger\"> Borrar</button></a></td>\n"
                        + "</tr>\n";
            }
            sHtml += sTabla + "</table>"
                            + "<br>"
                            + "<br>"
                    + "<div class=\"\">"
                    + "    <a href=\"./Login\" class=\"btn btn-secondary btn-lg\">Volver al Menú</a>"
                    + "</div>"
                    + objVHtml.getFooter();
            response.setContentType("text/html;charset=UTF-8");
            PrintWriter out = response.getWriter();
            out.println(sHtml);
        } catch (SQLException | ClassNotFoundException ex) {
            ex.toString();
        }
    }

    @Override
    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        Connection cnx;
        try {
            cnx = initializeDatabases();
            PreparedStatement st = null;
            if (request.getParameter("accion").equals("I")) {
                st = cnx.prepareStatement("insert into tbdoctor (IdDoctor,Nombre,IdEspecialidad,IDHorario, Telefono) values(?,?,?,?,?)");
                st.setString(1, request.getParameter("iddoctor").toString());
                st.setString(2, request.getParameter("nombre").toString());
                st.setString(3, request.getParameter("idespecialidad").toString());
                st.setString(4, request.getParameter("idhorario").toString());
                st.setString(5, request.getParameter("telefono").toString());
                st.executeUpdate();
                response.sendRedirect("./Doctor");
            } else if (request.getParameter("accion").equals("E")) {
                st = cnx.prepareStatement("update tbdoctor set Nombre=?,IdEspecialidad=?,IdHorario=?,Telefono=? where IdDoctor=?");
                st.setString(1, request.getParameter("nombre").toString());
                st.setString(2, request.getParameter("idespecialidad").toString());
                st.setString(3, request.getParameter("idhorario").toString());
                st.setString(4, request.getParameter("telefono").toString());
                st.setString(5, request.getParameter("iddoctor"));
                st.executeUpdate();
                response.sendRedirect("./Doctor");
            } else if (request.getParameter("accion").equals("B")) {
                st = cnx.prepareStatement("delete from tbdoctor where IdDoctor=?");
                st.setString(1, request.getParameter("iddoctor"));
                st.executeUpdate();
                response.sendRedirect("./Doctor");
            }

        } catch (SQLException | ClassNotFoundException ex) {
            response.setContentType("text/html;charset=UTF-8");
            PrintWriter out = response.getWriter();
            out.println(ex.toString() + " - " + request.getParameter("nombre")
                    + " - " + request.getParameter("idespecialidad")
                    + " - " + request.getParameter("idhorario") + " - "
                    + request.getParameter("telefono") + " - "
                    + request.getParameter("iddoctor"));
        }
    }

    @Override
    public String getServletInfo() {
        return "Short description";
    }// </editor-fold>

}
