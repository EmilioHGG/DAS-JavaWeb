                        + "</div>"
                        + objVHtml.getFooter();
                response.setContentType("text/html;charset=UTF-8");
                PrintWriter out = response.getWriter();
                out.println(sHtml);
    }

    @Override
    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        //processRequest(request, response);
        Connection cnx;
        String sNombre = "";
        String sHtml = "";
        VHtml objVHtml = new VHtml();
        try {
            cnx = initializeDatabases();
            PreparedStatement st = cnx.prepareStatement("Select nombre from tbusuario where usuario =? and clave =?");
            st.setString(1, request.getParameter("usuario").toString());
            st.setString(2, request.getParameter("clave").toString());
            ResultSet rs = st.executeQuery();
            while (rs.next()) {
                sNombre = rs.getString(1);
            }
            if (sNombre.equals("")) {
                response.sendRedirect("index.html");
            } else {
                sHtml = objVHtml.getHeader() + objVHtml.getBody()
                        + "<h3 style=\"text-align: center; margin-bottom: 30px;\">Bienvenido(a) al sistema DOCLINECITAS</h3>"
                        + "<div style=\"display: flex; justify-content: center;\">"
                        + "<div style=\"text-align: center; margin-right: 20px;\">"
                        + "<a href=\"./Paciente\" style=\"display: inline-block; padding: 10px; background-color: #d2f1dc; border-radius: 10px; text-decoration: none; color: black; margin-top: 15px;\">"
                        + "<img class=\"img-responsive center-block\" src=\"img/paci.png\" style=\"width: 100px; height: 100px; margin-bottom: 15px;\" /><br>"
                        + "Paciente</a>"
                        + "</div>"
                        + "<div style=\"text-align: center; margin-left: 20px;; margin-right: 20px;\">"
                        + "<a href=\"./Doctor\" style=\"display: inline-block; padding: 10px; background-color: #d2e7f1; border-radius: 10px; text-decoration: none; color: black; margin-top: 15px;\">"
                        + "<img class=\"img-responsive center-block\" src=\"img/docto.png\" style=\"width: 100px; height: 100px; margin-bottom: 15px;\" /><br>"
                        + "Doctores</a>"
                        + "</div>"
                        + "<div style=\"text-align: center; margin-left: 20px;; margin-right: 20px;\">"
                        + "<a href=\"./Especialidad\" style=\"display: inline-block; padding: 10px; background-color: #f1d2e7; border-radius: 10px; text-decoration: none; color: black; margin-top: 15px;\">"
                        + "<img class=\"img-responsive center-block\" src=\"img/espe.png\" style=\"width: 100px; height: 100px; margin-bottom: 15px;\" /><br>"
                        + "Especialidades</a>"
                        + "</div>"
                        + "<div style=\"text-align: center; margin-left: 20px;; margin-right: 20px;\">"
                        + "<a href=\"./Citas\" style=\"display: inline-block; padding: 10px; background-color: #f1dcd2; border-radius: 10px; text-decoration: none; color: black; margin-top: 15px;\">"
                        + "<img class=\"img-responsive center-block\" src=\"img/citas.png\" style=\"width: 100px; height: 100px; margin-bottom: 15px;\" /><br>"
                        + "Citas</a>"
                        + "</div>"
                        + "</div>"
                        + objVHtml.getFooter();
                response.setContentType("text/html;charset=UTF-8");
                PrintWriter out = response.getWriter();
                out.println(sHtml);
            }
        } catch (SQLException | ClassNotFoundException ex) {
            ex.toString();
        }
    }

    /**
     * Returns a short description of the servlet.
     *
     * @return a String containing servlet description
     */
    @Override
    public String getServletInfo() {
        return "Short description";
    }// </editor-fold>

}
*******************PacienteServlet.java**************
*****************************************************

package com.uwiener.das.javaweb;

import static com.uwiener.das.javaweb.BDConexion.*;
import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet(name = "Paciente", urlPatterns = {"/Paciente"})
public class PacienteServlet extends HttpServlet {

    @Override
    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        Connection cnx;
        String sHtml = "";
        VHtml objVHtml = new VHtml();
        String sTabla = "";
        try {
            cnx = initializeDatabases();
            PreparedStatement st = cnx.prepareStatement("SELECT ID,Nombre,Direccion,Telefono,Correo FROM tbpaciente ");
            ResultSet rs = st.executeQuery();
            sHtml = objVHtml.getHeader() + objVHtml.getBody()
                    + "<h3 class=\"text-primary text-center\">Lista de Pacientes</h3> <br>"
                    + "<a href=\"nuevopaciente.html\"><button class=\"btn btn-success glyphicon glyphicon-new-window\">\n"
                    + "                            Nuevo paciente</button></a>\n"
                    + "<table class=\"table table-striped\" style=\"width: 200%;\">\n"
                    + "    <colgroup>\n"
                    + "        <col style=\"width: 5%;\">\n"
                    + "        <col style=\"width: 20%;\">\n"
                    + "        <col style=\"width: 20%;\">\n"
                    + "        <col style=\"width: 15%;\">\n"
                    + "        <col style=\"width: 15%;\">\n"
                    + "        <col style=\"width: 12.5%;\">\n"
                    + "        <col style=\"width: 12.5%;\">\n"
                    + "    </colgroup>\n"
                    + "    <tr>\n"
                    + "        <th>Nº</th>\n"
                    + "        <th>Nombre</th>\n"
                    + "        <th>Direccion</th>\n"
                    + "        <th>Telefono</th>\n"
                    + "        <th>Correo</th>\n"
                    + "        <th>Editar</th>\n"
                    + "        <th>Borrar</th>\n"
                    + "    </tr>\n";
            while (rs.next()) {
                sTabla += "<tr>\n"
                        + "   <td>" + rs.getInt(1) + "</td>\n"
                        + "   <td>" + rs.getString(2) + "</td>\n"
                        + "   <td>" + rs.getString(3) + "</td>\n"
                        + "   <td>" + rs.getString(4) + "</td>\n"
                        + "   <td>" + rs.getString(5) + "</td>\n"
                        + "   <td><a href=\"./editarpaciente.jsp?id=" + rs.getInt(1) + "&nombre=" + rs.getString(2) + "&direccion=" + rs.getString(3) + "&telefono=" + rs.getString(4) + "&correo=" + rs.getString(5) + "\"><button class=\"btn btn-warning\"> Editar</button></a></td>\n"
                        + "   <td><a href=\"./borrarpaciente.jsp?id=" + rs.getInt(1) + "&nombre=" + rs.getString(2) + "&direccion=" + rs.getString(3) + "&telefono=" + rs.getString(4) + "&correo=" + rs.getString(5) + "\"><button class=\"btn btn-danger\"> Borrar</button></a></td>\n"
                        + "</tr>\n";
            }
            sHtml += sTabla + "</table>"
                    + "<br>"
                    + "<br>"
                    + "<div class=\"\">"
                    + "    <a href=\"./Login\" class=\"btn btn-secondary btn-lg\">Volver al Menú</a>"
                    + "</div>"
                    + objVHtml.getFooter();
            response.setContentType("text/html;charset=UTF-8");
            PrintWriter out = response.getWriter();
            out.println(sHtml);
        } catch (SQLException | ClassNotFoundException ex) {
            ex.toString();
        }
    }

    @Override
    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        Connection cnx;
        try {
            cnx = initializeDatabases();
            PreparedStatement st = null;
            if (request.getParameter("accion").equals("I")) {
                st = cnx.prepareStatement("insert into tbpaciente (ID,Nombre,Direccion,Telefono,Correo) values(?,?,?,?,?)");
                st.setString(1, request.getParameter("id").toString());
                st.setString(2, request.getParameter("nombre").toString());
                st.setString(3, request.getParameter("direccion").toString());
                st.setString(4, request.getParameter("telefono").toString());
                st.setString(5, request.getParameter("correo").toString());
                st.executeUpdate();
                response.sendRedirect("./Paciente");
            } else if (request.getParameter("accion").equals("E")) {
                st = cnx.prepareStatement("update tbpaciente set Nombre=?,Direccion=?,Telefono=?,Correo=? where ID=?");
                st.setString(1, request.getParameter("nombre").toString());
                st.setString(2, request.getParameter("direccion").toString());
                st.setString(3, request.getParameter("telefono").toString());
                st.setString(4, request.getParameter("correo").toString());
                st.setString(5, request.getParameter("id").toString());
                st.executeUpdate();
                response.sendRedirect("./Paciente");
            } else if (request.getParameter("accion").equals("B")) {
                st = cnx.prepareStatement("delete from tbpaciente where ID=?");
                st.setString(1, request.getParameter("id").toString());
                st.executeUpdate();
                response.sendRedirect("./Paciente");
            }

        } catch (SQLException | ClassNotFoundException ex) {
            ex.toString();
        }
    }

    /**
     * Returns a short description of the servlet.
     *
     * @return a String containing servlet description
     */
    @Override
    public String getServletInfo() {
        return "Short description";
    }// </editor-fold>

}

************VHtml.java********
******************************

package com.uwiener.das.javaweb;

import java.util.HashSet;
import java.util.Set;

public class VHtml {
    private String Header;
    private String Body;
    private String Footer;
    

    public VHtml(){
        this.setHeader("<!doctype html>\n" +
                        "<html class=\"no-js\" lang=\"\"> <!--<![endif]-->\n" +
                        "    <head>\n" +
                        "        <meta charset=\"utf-8\">\n" +
                        "        <meta http-equiv=\"X-UA-Compatible\" content=\"IE=edge,chrome=1\">\n" +
                        "        <title>Desarrollo de Aplicaciones en Salud</title>\n" +
                        "        <meta name=\"description\" content=\"\">\n" +
                        "        <meta name=\"viewport\" content=\"width=device-width, initial-scale=1\">\n" +
                        "        <link rel=\"apple-touch-icon\" href=\"apple-touch-icon.png\">\n" +
                        "\n" +
                        "        <link rel=\"stylesheet\" href=\"css/bootstrap.min.css\">\n" +
                        "        <style>\n" +
                        "            body {\n" +
                        "                padding-top: 50px;\n" +
                        "                padding-bottom: 20px;\n" +
                        "            }\n" +
                        "        </style>\n" +
                        "        <link rel=\"stylesheet\" href=\"webjars/bootstrap/5.2.2/css/bootstrap.css\">\n" +
                        "    </head>");
        
        this.setFooter("        </div>\n" +
                        "        <div class=\"col-md-3\"></div>\n" +
                        "      </div>      \n" +
                        "      <footer>\n" +
                        "        <p class=\"center\"></p>\n" +
                        "      </footer>\n" +
                        "    </div> \n" +
                        "        <!-- /container -->        \n" +
                        "        <script src=\"//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js\"></script>\n" +
                        "        <script>window.jQuery || document.write('<script src=\"js/vendor/jquery-1.11.2.min.js\"><\\/script>')</script>\n" +
                        "\n" +
                        "        <script src=\"js/vendor/bootstrap.min.js\"></script>\n" +
                        "\n" +
                        "        <script src=\"js/main.js\"></script>\n" +
                        "\n" +
                        "        <!-- Google Analytics: change UA-XXXXX-X to be your site's ID. -->\n" +
                        "        <script>\n" +
                        "            (function(b,o,i,l,e,r){b.GoogleAnalyticsObject=l;b[l]||(b[l]=\n" +
                        "            function(){(b[l].q=b[l].q||[]).push(arguments)});b[l].l=+new Date;\n" +
                        "            e=o.createElement(i);r=o.getElementsByTagName(i)[0];\n" +
                        "            e.src='//www.google-analytics.com/analytics.js';\n" +
                        "            r.parentNode.insertBefore(e,r)}(window,document,'script','ga'));\n" +
                        "            ga('create','UA-XXXXX-X','auto');ga('send','pageview');\n" +
                        "        </script>\n" +
                        "    </body>\n" +
                        "</html>\n" +
                        "");
        this.setBody("<body>\n" +
                        "    <div class=\"container\">\n" +
                        "      <!-- Example row of columns -->\n" +
                        "      <div class=\"row\">\n" +
                        "        <div class=\"col-md-3\"></div>\n" +
                        "        <div class=\"col-md-6\">");
    }

    public String getHeader() {
        return Header;
    }

    public void setHeader(String Header) {
        this.Header = Header;
    }

    public String getFooter() {
        return Footer;
    }


    public void setFooter(String Footer) {
        this.Footer = Footer;
    }

    public String getBody() {
        return Body;
    }

    public void setBody(String Body) {
        this.Body = Body;
    }
}



