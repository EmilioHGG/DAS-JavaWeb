                    <form class="form" action="./Citas" method="POST">
                        <div class="form-group" style="text-align:left;">
                            <label  for="idcita" class="form-label">ID</label>
                            <input class="form-control" value="<%= request.getParameter("idcita")%>"  name="idcita" readonly="readonly" type="text" placeholder="Ingrese ID"/>
                        </div>
                        <br>
                        <div class="form-group" style="text-align:left;">
                            <label  for="especialidad" class="form-label">Especialidad</label>
                            <input class="form-control" value="<%= request.getParameter("especialidad")%>"  name="especialidad" readonly="readonly" type="text" placeholder="Ingrese especialidad"/>
                        </div>
                        <br>
                        <div class="form-group" style="text-align:left;">
                            <label  for="doctor" class="form-label">Doctor</label>
                            <input class="form-control" value="<%= request.getParameter("doctor")%>"  name="doctor" readonly="readonly" type="text" placeholder="Ingrese ID"/>
                        </div>
                        <br>
                        <div class="form-group" style="text-align:left;">
                            <label  for="horario" class="form-label">Turno</label>
                            <input class="form-control" value="<%= request.getParameter("horario")%>"  name="horario" readonly="readonly" type="text" placeholder="Ingrese ID"/>
                        </div>
                        <br>
                        <div class="form-group" style="text-align:left;">
                            <label  for="fecha" class="form-label">Fecha</label>
                            <input class="form-control" value="<%= request.getParameter("fecha")%>"  name="horario" readonly="readonly" type="text" placeholder="Ingrese ID"/>
                        </div>
                        <br>
                        <div class="form-group" style="text-align:left;">
                            <label for="paciente" class="form-label">Paciente</label>
                            <input class="form-control" value="<%= request.getParameter("paciente")%>"  name="paciente" readonly="readonly" type="text" placeholder="Ingrese ID"/>
                        </div>
                        <br>
                        <div class="form-group" style="text-align:left;">
                            <label for="correo" class="form-label">Correo</label>
                            <input class="form-control" value="<%= request.getParameter("correo")%>"  name="correo" readonly="readonly" type="text" placeholder="Ingrese ID"/>
                        </div>
                        <br>
                        <div class="form-group" style="text-align:left;">
                            <label for="dni" class="form-label">DNI</label>
                            <input class="form-control" value="<%= request.getParameter("dni")%>"  name="dni" readonly="readonly" type="text" placeholder="Ingrese ID"/>
                        </div>
                        <br>
                        <div class="form-group" style="text-align:left;">
                            <label for="celular" class="form-label">Celular</label>
                            <input class="form-control" value="<%= request.getParameter("celular")%>"  name="celular" readonly="readonly" type="text" placeholder="Ingrese ID"/>
                        </div>
                        <input type="hidden" value="B" name="accion" />
                        <br>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Eliminar</button>
