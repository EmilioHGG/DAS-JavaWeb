                        <div class="form-group">
                            <label for="telefono" class="form-label">Teléfono</label>
                            <input  class="form-control" name="telefono" value="<%= request.getParameter("telefono")%>" type="tel" pattern="[0-9]{9}" oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 9)" maxlength="9" placeholder="Ingrese Teléfono" required />
                        </div>
                        <br>
                        <div class="form-group">
                            <label  for="correo" class="form-label">Correo</label>
                            <input required class="form-control" name="correo" type="text"  value="<%= request.getParameter("correo")%>"placeholder="Ingrese Correo"/>
                        </div>
                        <br>
                        <input type="hidden" value="E" name="accion" />
                        <br>
                        <div class="d-grid gap-2" style="width: 100%;">          
